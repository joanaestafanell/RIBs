<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rib_child2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child3_background">

    <View
        android:id="@+id/sharedElement"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/oval_bg"
        app:layout_constraintTop_toTopOf="@id/child3_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/child3_title" />

    <TextView
        android:id="@+id/child3_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/child3_text"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>